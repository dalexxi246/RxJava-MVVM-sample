<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.wh2.foss.people.ui.viewmodels.PersonViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@{vm.documentTypeShort}"
            android:id="@+id/label_tipdoc"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="4dp"
            android:textAlignment="gravity"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CC" />

        <TextView
            android:id="@+id/label_name_number"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            app:layout_constraintBottom_toBottomOf="@+id/label_tipdoc"
            app:layout_constraintLeft_toRightOf="@+id/label_tipdoc"
            app:layout_constraintTop_toTopOf="@+id/label_tipdoc"
            app:layout_constraintVertical_bias="0.0"
            tools:text="HURTADO HURTADO WILMER ALEXIS (# 1144153981)" />
    </android.support.constraint.ConstraintLayout>
</layout>